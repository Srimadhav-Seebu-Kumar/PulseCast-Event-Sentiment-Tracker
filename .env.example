# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, production, testing)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Application host and port
HOST=0.0.0.0
PORT=8000

# Secret key for sessions and JWT tokens (generate a secure key)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pulsecast
DB_USER=pulsecast_user
DB_PASSWORD=your_db_password
DB_URL=postgresql://pulsecast_user:your_db_password@localhost:5432/pulsecast

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# Elasticsearch
ELASTIC_HOST=localhost
ELASTIC_PORT=9200
ELASTIC_USER=elastic
ELASTIC_PASSWORD=your_elastic_password
ELASTIC_URL=http://elastic:your_elastic_password@localhost:9200

# =============================================================================
# API KEYS - SOCIAL MEDIA PLATFORMS
# =============================================================================

# Twitter/X API Keys
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Reddit API Keys
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=PulseCast/1.0 by your_username

# YouTube API Key (Optional)
YOUTUBE_API_KEY=your_youtube_api_key

# News API Key
NEWS_API_KEY=your_news_api_key

# =============================================================================
# MACHINE LEARNING & AI
# =============================================================================

# Hugging Face API Token (for downloading models)
HUGGINGFACE_TOKEN=your_huggingface_token

# Model cache directory
MODEL_CACHE_DIR=./models

# GPU Configuration
USE_GPU=true
CUDA_VISIBLE_DEVICES=0

# =============================================================================
# MESSAGE QUEUES & STREAMING
# =============================================================================

# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS_SENTIMENT=sentiment-analysis
KAFKA_TOPICS_EVENTS=event-detection
KAFKA_TOPICS_TRENDS=trend-analysis

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/pulsecast.log

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# CLOUD & INFRASTRUCTURE
# =============================================================================

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your_s3_bucket_name

# Google Cloud Configuration (if using GCP services)
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json
GCP_PROJECT_ID=your_gcp_project_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
FEATURE_REAL_TIME_ANALYSIS=true
FEATURE_BATCH_PROCESSING=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_WEBHOOK_ALERTS=true
FEATURE_GEOGRAPHIC_ANALYSIS=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker processes for async operations
WORKER_PROCESSES=4

# Batch sizes for processing
BATCH_SIZE_SENTIMENT=100
BATCH_SIZE_EVENTS=50
BATCH_SIZE_TRENDS=200

# Cache TTL (seconds)
CACHE_TTL_SENTIMENT=300
CACHE_TTL_TRENDS=600
CACHE_TTL_EVENTS=180
